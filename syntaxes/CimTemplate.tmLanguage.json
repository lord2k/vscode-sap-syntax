{
  "name": "CimTemplate",
  "scopeName": "source.cim.template",

  "patterns": [
    { "include": "source.sapinst.process#params" },
    { "include": "#object" },
    { "include": "#array" },
    { "include": "#array2" },
    { "include": "#variable" },
    {
      "match": "(?!\\.)([\\w\\-]+:)(?:\\s*([\\w\\-]+))?\\s*\\{",
      "captures": {
        "1": { "name": "keyword" },
        "2": { "name": "support.function.builtin" }
      }
    },
    {
      "match": "\\s*###.*$",
      "name": "comment.strong.cim.template markup.bold"
    },
    {
      "match": "^\\s*#.*$",
      "name": "comment.cim.template markup.italic"
    },
    {
      "match": "([\\w\\-]+:)",
      "captures": {
        "1": { "name": "keyword.cim.template" }
      }
    }
  ],
  "repository": {
    "object": {
      "patterns": [
        {
          "match": "((?:SAP_)?MetricValue)\\(?",
          "captures": {
            "1": { "name": "support.function.builtin.cim.template" }
          }
        },
        {
          "match": "(?!\\.)([\\w\\-]+:)(?:\\s*([\\w\\-]+))?\\s*\\{",
          "captures": {
            "1": { "name": "keyword.cim.template" },
            "2": { "name": "entity.name.function" }
          }
        },
        {
          "match": "([$]\\[[\\w\\-\\.()#:=,\\*]+)",
          "captures": {
            "1": { "name": "variable.cim.template" }
          }
        },
        {
          "match": "\\s(?!\\.)([\\w\\-]+:)",
          "captures": {
            "1": { "name": "keyword.cim.template" }
          }
        },
        {
          "match": "([@]\\[|\\])",
          "name": "variable.parameter",
          "captures": {
            "1": { "name": "variable" },
            "2": { "name": "variable.parameter" }
          }
        },
        {
          "match": "\\s*###.*$",
          "name": "comment.strong.cim.template markup.bold"
        },
        {
          "match": "^\\s*#.*$",
          "name": "comment.cim.template markup.italic"
        }
      ]
    },
    "array": {
      "patterns": [
        {
          "match": "(#?\\w+\\()",
          "captures": {
            "1": { "name": "entity.name.function" }
          }
        },
        {
          "match": "\\)",
          "name": "entity.name.function"
        },
        {
          "match": "([@]\\[)",
          "name": "variable.parameter",
          "captures": {
            "1": { "name": "markup.italic" },
            "2": { "name": "variable.parameter" }
          }
        }
      ]
    },
    "array2": {
      "patterns": [
        {
          "match": "(#?\\w+\\()",
          "captures": {
            "1": { "name": "support.function.builtin" }
          }
        },
        {
          "match": "\\)",
          "name": "entity.name.function"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "match": "\\$\\[\\w+\\]",
          "name": "variable"
        }
      ]
    }
  }
}
